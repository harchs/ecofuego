<script type="text/javascript" charset="utf-8">
  $(function () {
    new Highcharts.Chart({
      chart: { renderTo: 'chartdiv' },
      title: { text: '' },
	    xAxis: { 
        type: 'datetime',  
        maxZoom: 720 * 3600 * 1000
      },
	    yAxis: {
	      title: { text: 'Wastes(kg) incinerated'}
	    },
      tooltip: {
        formatter: function () {
          return Highcharts.dateFormat("%B, %Y", this.x) + ': ' + Highcharts.numberFormat(this.y, 2) + ' Kg';
        }
      },
	    series: [{
        name: "Wastes incinerated",
	      pointInterval: 720 * 3600 * 1000,
	      pointStart: Date.UTC(2013, 0),
	      data: <%= Waste.incinerated('month').map(&:weight)%>
	    }]
	  });
  });
</script>

